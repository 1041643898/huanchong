<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginactivity.RegisterActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:id="@+id/register_cancel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="取消"
           android:textColor="#f1a734"
           android:textSize="20sp"
           />
      <TextView
          android:gravity="center|right"
            android:id="@+id/login"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="登陆"
          android:textColor="#f1a734"
          android:textSize="20sp"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="欢迎您加入宠物寄养"
            android:textColor="#959595"
            android:textSize="23sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText

            android:hint="请输入手机号"
            android:textColorHint="#afb7b0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/register_phome" />

        <TextView
            android:background="@drawable/register_shapes"
            android:id="@+id/register_auth_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/register_phome"
            android:layout_alignRight="@+id/register_phome"
            android:textColor="#a4a40f"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:text="获取验证码" />
    </RelativeLayout>

    <EditText
        android:id="@+id/auth_code_editText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="请输入验证码"
        android:textColorHint="#afb7b0" />

    <EditText
        android:id="@+id/user_name_editText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="请输入用户名"
        android:textColorHint="#afb7b0" />

    <EditText
        android:id="@+id/register_pasword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="设置6位数字密码"
        android:textColorHint="#afb7b0" />
    <Button
        android:text="注册"
        android:id="@+id/register"
        android:background="@drawable/register_shapes_register"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="使用第三方注册"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#abb3ac"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/register_weixin"
            android:layout_width="70dp"
            android:layout_height="73dp"

            android:src="@mipmap/login_weixin" />

        <ImageView
            android:id="@+id/register_QQ"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/login_qq" />

    </LinearLayout>


</LinearLayout>
