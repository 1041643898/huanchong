<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/main_listview_user_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/photos" />

        <ImageView
            android:id="@+id/main_listview_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
    />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_listview_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是谁的家" />


        <RatingBar
            android:id="@+id/main_ratingBar1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5" />

        <TextView
            android:id="@+id/main_listview_user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="北京市昌平区沙杨路紫炎天成公寓" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_listview_user_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="￥50起"
            android:textColor="#ff0000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/main_listview_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/location"
            android:text="距0.1km" />
    </LinearLayout>

</LinearLayout>