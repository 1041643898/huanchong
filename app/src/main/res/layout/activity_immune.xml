<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back_gray"/>
        <TextView
            android:text="免疫情况"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="确定"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#d7c9c9"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:text="以前是否免疫过"

            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:button="@null"
            android:background="@drawable/immune"
            android:layout_width="80dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <View
        android:background="#d7c9c9"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:text="上次免疫时间"

            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/enter"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="上次免疫时间"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="请如实选择宠物已免疫病毒类型"
            android:textColor="#aaa4b7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RadioButton
            android:text="犬疫病毒"
            android:button="@null"
            android:background="@drawable/yuan"

            android:layout_weight="1"
            android:drawableLeft="@mipmap/list_selected"
            android:layout_width="10dp"
            android:layout_height="50dp" />
        <RadioButton
            android:background="@drawable/yuan"
            android:text="犬细小病毒"
            android:button="@null"

            android:layout_weight="1"
            android:drawableLeft="@mipmap/net_warn_icon"
            android:layout_width="10dp"
            android:layout_height="50dp" />
    </RadioGroup>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RadioButton
            android:background="@drawable/yuan"
            android:text="犬腺病毒"
            android:button="@null"

            android:layout_weight="1"
            android:drawableLeft="@mipmap/net_warn_icon"
            android:layout_width="20dp"
            android:layout_height="50dp" />
        <RadioButton
            android:background="@drawable/yuan"
            android:text="狂犬病病毒"
            android:button="@null"

            android:layout_weight="1"
            android:drawableLeft="@mipmap/net_warn_icon"
            android:layout_width="20dp"
            android:layout_height="50dp" />
    </RadioGroup>
</LinearLayout>