<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f1f5"
    android:id="@+id/mLine"
    tools:context=".loginactivity.Forget_The_PasswordActivity">
<RelativeLayout
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/get_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="23sp"
        android:textColor="#646464"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:id="@+id/submit"
            android:textSize="20sp"
            android:textColor="#646464"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="手机号"
            android:textSize="20sp"
            />
<EditText
    android:layout_marginLeft="20dp"
    android:id="@+id/forget_phome_editText"
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:layout_weight="1"
    android:text="请输入注册时的手机号"
    android:textColor="#cfcfcf"

    android:background="@null"

    />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="验证码"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/register_auth_code"
            android:layout_alignBottom="@+id/register_auth_code"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText

            android:hint="请输入验证码"

            android:textColorHint="#afb7b0"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/register_phome"
            android:background="@null"
            />

        <TextView
            android:background="@drawable/register_shapes"
            android:id="@+id/register_auth_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/register_phome"
            android:layout_alignRight="@+id/register_phome"
            android:textColor="#a4a40f"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:text="获取验证码" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="新密码"
            android:textSize="20sp"
            />
        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/forget_password_editText"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="请输入6-16位字母、数字"
            android:textColor="#cfcfcf"

            android:background="@null"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="确认密码"
            android:textSize="20sp"
            />
        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/forget_affirm_password_editText"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="请输入确认密码"
            android:textColor="#cfcfcf"

            android:background="@null"

            />

    </LinearLayout>
</LinearLayout>
