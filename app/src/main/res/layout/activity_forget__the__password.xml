<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f5"
    android:orientation="vertical"
    tools:context=".loginactivity.Forget_The_PasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--android:fitsSystemWindows="true"-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/get_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/back_gray" ></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="忘记密码"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="提交"
                    android:textSize="20dp" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="手机号"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/forget_phome_editText"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="请输入注册时的手机号"

                android:textColor="#cfcfcf"

                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/register_auth_code"
                android:layout_alignBottom="@+id/register_auth_code"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="验证码"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/register_phome"

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColorHint="#afb7b0" />

            <TextView
                android:id="@+id/register_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/register_phome"
                android:layout_alignRight="@+id/register_phome"
                android:layout_centerVertical="true"
                android:background="@drawable/register_shapes"
                android:text="获取验证码"
                android:textColor="#a4a40f"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="新密码"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/forget_password_editText"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="请输入6-16位字母、数字"

                android:textColor="#cfcfcf"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="确认密码"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/forget_affirm_password_editText"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="请输入确认密码"

                android:textColor="#cfcfcf"

                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
